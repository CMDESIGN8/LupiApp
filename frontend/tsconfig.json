// tsconfig.json o tsconfig.app.json
{
  "compilerOptions": {
    "target": "es2020", // <--- ¡Asegúrate de que sea 'es2020' o 'esnext'!
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // <--- Asegúrate que estas librerías sean compatibles
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,   // Mantén esto en 'false' por ahora
    "noUnusedParameters": false, // Mantén esto en 'false' por ahora
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}